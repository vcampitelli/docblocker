<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="DocBlocker">
    <description>Configuração da PSR12 para o projeto.</description>

    <!-- display progress -->
    <arg value="p"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>src</file>
    <file>bin/docblocker</file>
</ruleset>
